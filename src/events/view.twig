---
title: 予約管理 - 予約情報の表示
action_name: 予約情報の表示
---
{% extends "layout/default.twig" %}
{% block content_header %}
<div class="col">
  <h1 class="m-0">{{ feature_name }}</h1>
</div>
<!-- /content-header -->
{% endblock %}
{% block content %}
<div class="row">
  <div class="col-3">
    <div class="card card-outline">
      <div class="card-header">
        <h3 class="card-title">予約情報</h3>
        <div class="card-tools">
          <a href="{{ action.edit.url }}" class="btn btn-outline-primary btn-sm">編集</a>
          <a href="#" class="btn btn-outline-danger btn-sm">削除</a>
        </div>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label for="target_date" class="control-label">予約日</label>
          <input type="date" name="target_date" id="target_date" value="2023-11-13" class="form-control"
            pattern="[0-9]\{4}-[0-9]\{2}-[0-9]\{2}" readonly>
        </div>
        <!-- /.form-group -->
        <div class="row">
          <div class="col">
            <div class="form-group">
              <label for="time" class="control-label">開始時間</label>
              <input type="time" name="time" id="time" value="12:00" step="300" class="form-control"
                pattern="[0-9]\{2}:[0-9]\{2}" readonly>
            </div>
            <!-- /.form-group -->
          </div>
          <div class="col">
            <div class="form-group">
              <label for="time" class="control-label">終了時間</label>
              <input type="time" name="time" id="time" value="12:35" step="300" class="form-control"
                pattern="[0-9]\{2}:[0-9]\{2}" readonly>
            </div>
            <!-- /.form-group -->
          </div>
        </div>
        <div class="form-group">
          <label for="text" class="control-label">予約名</label>
          <input type="text" name="text" id="text" value="ヤマダタロウ" class="form-control" readonly>
        </div>
        <!-- /.form-group -->
        <div class="form-group">
          <label for="textarea" class="control-label">備考</label>
          <textarea name="textarea" id="textarea" rows="5" class="form-control" readonly></textarea>
        </div>
        <!-- /.form-group -->
      </div>
    </div>
    <!-- /.card -->
    <div class="card card-outline">
      <div class="card-header">
        <h3 class="card-title">ステータス</h3>
      </div>
      <div class="card-body">
        <button type="submit" class="btn btn-success btn-block">来店済み</button>
      </div>
    </div>
    <!-- /.card -->
  </div>
  <div class="col-9">
    <div class="card card-outline">
      <div class="card-header">
        <h3 class="card-title">会員情報</h3>
      </div>
      <div class="card-body">
        {% include 'element/view/member.twig' %}
      </div>
      <div class="card-footer">
        <button type="submit" class="btn btn-success">会員登録する</button>
        <small class="text-muted">(非会員の予約の場合のみボタンを出力)</small>
      </div>
    </div>
    <!-- /.card -->
  </div>
</div>
{% endblock %}
